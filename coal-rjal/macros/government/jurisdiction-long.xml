<macro name="jurisdiction-long">
    <choose>
        <if variable="supress-jurisdiction" />
        <else>
            <choose>
                <if jurisdiction="ca:ab">
                    <text term="ca:ab" form="long"/>
                </if>
                <else-if jurisdiction="ca:bc">
                    <text term="ca:bc" form="long"/>
                </else-if>
                <else-if jurisdiction="ca:mb">
                    <text term="ca:mb" form="long"/>
                </else-if>
                <else-if jurisdiction="ca:nb">
                    <text term="ca:nb" form="long"/>
                </else-if>
                <else-if jurisdiction="ca:nl">
                    <text term="ca:nl" form="long"/>
                </else-if>
                <else-if jurisdiction="ca:nt">
                    <text term="ca:nt" form="long"/>
                </else-if>
                <else-if jurisdiction="ca:ns">
                    <text term="ca:ns" form="long"/>
                </else-if>
                <else-if jurisdiction="ca:nu">
                    <text term="ca:nu" form="long"/>
                </else-if>
                <else-if jurisdiction="ca:on">
                    <text term="ca:on" form="long"/>
                </else-if>
                <else-if jurisdiction="ca:pe">
                    <text term="ca:pe" form="long"/>
                </else-if>
                <else-if jurisdiction="ca:qc">
                    <text term="ca:qc" form="long"/>
                </else-if>
                <else-if jurisdiction="ca:sk">
                    <text term="ca:sk" form="long"/>
                </else-if>
                <else-if jurisdiction="ca:yk">
                    <text term="ca:yk" form="long"/>
                </else-if>
                <else-if jurisdiction="ca">
                    <text term="ca" form="long"/>
                </else-if>
                <else>
                    <text variable="jurisdiction" />
                </else>
            </choose>
        </else>
    </choose>
</macro>