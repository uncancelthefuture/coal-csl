<macro name="canadian-court">
    <choose>
        <if jurisdiction="ca:ab">
            <text macro="ab-courts"/>
        </if>
        <else-if jurisdiction="ca:bc">
            <text term="ca:bc" form="short" />
        </else-if>
        <else-if jurisdiction="ca:mb">
            <text term="ca:mb" form="short" />
        </else-if>
        <else-if jurisdiction="ca:nb">
            <text term="ca:nb" form="short" />
        </else-if>
        <else-if jurisdiction="ca:nl">
            <text term="ca:nl" form="short" />
        </else-if>
        <else-if jurisdiction="ca:nt">
            <text term="ca:nt" form="short" />
        </else-if>
        <else-if jurisdiction="ca:ns">
            <text term="ca:ns" form="short" />
        </else-if>
        <else-if jurisdiction="ca:nu">
            <text term="ca:nu" form="short" />
        </else-if>
        <else-if jurisdiction="ca:on">
            <text term="ca:on" form="short" />
        </else-if>
        <else-if jurisdiction="ca:pe">
            <text term="ca:pe" form="short" />
        </else-if>
        <else-if jurisdiction="ca:qc">
            <text term="ca:qc" form="short" />
        </else-if>
        <else-if jurisdiction="ca:sk">
            <text term="ca:sk" form="short" />
        </else-if>
        <else-if jurisdiction="ca:yk">
            <text term="ca:yk" form="short" />
        </else-if>
        <else-if jurisdiction="ca">
            <choose>
                <if authority="court.supreme">
                    <text term="scc"/>
                </if>
            </choose>
        </else-if>
        <else>
            <text variable="jurisdiction" />
        </else>
    </choose>
</macro>